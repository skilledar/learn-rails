<% content_for :title do %>Foo Bar<% end %>
<% content_for :description do %>Website of Foo Bar<% end %>
<img src="http://lorempixel.com/400/200">
<div style="text-align: center; margin-top: 20px">
	<div class="span4 offset2">
		<h2>Stay in touch.</h2>
	</div>
	<div class="span4">
		<div>
		<%= simple_form_for @visitor do |f| %>
		<%= f.error_notification %>
		<%= f.input :email, label: false, :placeholder => 'Your email address...' %>
		<br/>
		<%= f.submit "Sign up for the newsletter", :class => "btn btn-primary"%>
		<% end %>
		</div>
	</div>
</div>

